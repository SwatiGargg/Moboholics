<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        tools:context=".LoginActivity">
    <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="382dp"
            android:layout_height="216dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/applogo"
            android:layout_marginTop="5dp"/>
    <EditText
            android:id="@+id/etPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/imgLogo"
            android:hint="@string/phone"
            android:padding="5dp"
            android:maxLength="10"
            android:maxLines="1"
            android:inputType="phone" android:layout_marginBottom="5dp" android:layout_alignParentEnd="true"
            android:layout_marginEnd="-14dp"/>
    <EditText
            android:id="@+id/etPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/etPhone"
            android:hint="@string/password"
            android:padding="5dp"
            android:maxLength="10"
            android:maxLines="1"
            android:inputType="textPassword" android:layout_marginBottom="5dp" android:layout_alignParentStart="true"
            android:layout_marginStart="0dp"/>
    <Button
            android:id="@+id/btnLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/etPass"
            android:layout_marginTop="25dp"
            android:background="@color/colorPrimaryDark"
            android:text="Log In"
            android:textSize="30sp"
            android:textColor="#fff" android:layout_marginBottom="5dp" android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp" android:layout_marginEnd="6dp"
    />
    <TextView
            android:id="@+id/ForgotPass"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="63dp"
            android:text="@string/forgot_password"
            android:textSize="20sp"
            android:textColor="#928B8B" android:layout_marginBottom="5dp"
            android:gravity="center"
            android:layout_alignTop="@+id/btnLog"/>
    <TextView
            android:id="@+id/SignUP"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="182dp"
            android:text="@string/sign_up"
            android:textSize="20sp"
            android:textColor="#928B8B" android:layout_marginBottom="30dp"
            android:gravity="center"
            android:layout_alignParentStart="true"/>

</RelativeLayout>